<?xml version="1.0" encoding="utf-8"?>

                                                              
                                                       
                                                   
    
                 
                            
                                                                                    
           

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".restaurantslist.RestaurantsListActivity" android:tag="layout/activity_restaurants_0" xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:tools="http://schemas.android.com/tools">

        <EditText
            android:hint="@string/restaurant_name"
            app:layout_constraintTop_toTopOf="parent"
            app:iconifiedByDefault="false"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_gravity="bottom"
            android:id="@+id/edit_search"
            android:layout_margin="12dp"
            android:imeOptions="actionSearch"
            android:drawablePadding="8dp"
            android:inputType="text"
            android:paddingStart="8dp"
            android:paddingEnd="8dp"
            android:paddingRight="8dp"
            android:paddingLeft="8dp"
            android:drawableLeft="@drawable/ic_search"
            android:drawableStart="@drawable/ic_search"
            app:queryHint="Search by name"
            android:background="@drawable/search_background"
            app:layout_collapseMode="pin"
            android:importantForAutofill="no" />


        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/restaurants_recyclerview"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="12dp"
            android:tag="binding_1"                   
            tools:listitem="@layout/restaurant_item"
            app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
            android:layout_marginBottom="26dp"
            app:layout_constraintTop_toBottomOf="@id/edit_search"
            android:paddingBottom="70dp"
            />

        <com.google.android.material.progressindicator.LinearProgressIndicator
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/progressbar"
            android:tag="binding_2"               
            app:layout_constraintBottom_toBottomOf="parent"
            android:indeterminate="true"
            android:layout_marginBottom="5dp"
            />

    </androidx.constraintlayout.widget.ConstraintLayout>

         